<div class="login_wrapper">
  <h1>Sign In</h1>
  <%= form_tag "/auth/identity/callback" do %>
    <div class="field">
      <%= label_tag :auth_key, "Email" %><br>
      <%= text_field_tag :auth_key %>
    </div>
    <div class="field">
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
    </div>
    <div class="actions"><%= submit_tag "Login" %></div>
  <% end %>

  <p><strong>Sign in through Google Account:</strong></p>
  <div class="auth_providers">
    <a href="/auth/google_oauth2" class="auth_provider">
      <%= image_tag "google_64.png", :size => "64x64", :alt => "Google" %>
      Google
    </a>
  </div>
</div>